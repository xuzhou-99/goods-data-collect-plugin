{
    "manifest_version": 3,
    "name": "GoodsCollector",
    "version": "0.9.9",
    "description": "数据采集插件，进去当前主流的电商网站平台时，能自动采集商品信息，方便用户进行数据分析。",
    "icons": {
        "16": "images/favicon-16x16.png",
        "48": "images/favicon-16x16.png",
        "128": "images/favicon-16x16.png"
    },
    "permissions": [
        "storage",
        "tabs",
        "scripting",
        "activeTab",
        "webRequest",
        "webRequestBlocking",
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "*://*.pinduoduo.com/*",
        "*://*.yangkeduo.com/*",
        "*://*.taobao.com/*",
        "*://*.tmall.com/*",
        "*://*.*.tmall.com/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_icon": {
            "16": "images/favicon-16x16.png",
            "48": "images/favicon-16x16.png",
            "128": "images/favicon-16x16.png"
        },
        "default_popup": "popup/popup.html",
        "default_title": "点击打开 GoodsCollector"
    },
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "matches": [
                "*://*.pinduoduo.com/*",
                "*://*.yangkeduo.com/*",
                "*://*.taobao.com/*",
                "*://*.tmall.com/*"
            ],
            "all_frames": true,
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "scripts/*.js",
                "scripts/injects/*.js",
                "background/*.js",
                "/libs/xlsx.full.min.js"
            ],
            "matches": [
                "*://*.pinduoduo.com/*",
                "*://*.yangkeduo.com/*",
                "*://*.taobao.com/*",
                "*://*.tmall.com/*"
            ]
        }
    ]
}